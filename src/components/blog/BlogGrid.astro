---
import BlogCard from './BlogCard.astro';

// Define props with TypeScript inline
type Post = {
  slug: string;
  title: string;
  excerpt: string;
  date: string;
  category: string;
  readTime?: string;
};

type Props = {
  posts: Post[];
};

const { posts } = Astro.props as Props;
---

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
  {posts.map((post) => (
    <BlogCard {post} />
  ))}
</div>