---
type PhotoItem = {
  id: number;
  image: string;
  title: string;
  uploadDate: string;
};

type Props = {
  photo: PhotoItem;
};

const { photo } = Astro.props as Props;

const formatDate = (dateString: string) => {
  const date = new Date(dateString);
  return date.toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'short',
    day: 'numeric'
  });
};
---

<article class="group bg-white rounded-xl shadow-lg hover:shadow-xl transition-all duration-300 overflow-hidden border border-gray-200 hover:border-primary-200 cursor-pointer" 
         data-photo-id={photo.id}
         onclick=`openLightbox(${photo.id})`>
  
  <!-- Image Container -->
  <div class="relative overflow-hidden aspect-square">
    <!-- Gradient Placeholder -->
    <div class="w-full h-full bg-gradient-to-br from-primary-500 to-secondary-500 relative">
      <!-- Hover Overlay -->
      <div class="absolute inset-0 bg-black/0 group-hover:bg-black/20 transition-all duration-300 flex items-center justify-center">
        <div class="opacity-0 group-hover:opacity-100 transition-opacity duration-300 transform group-hover:scale-110">
          <div class="bg-white/90 backdrop-blur-sm rounded-full p-3">
            <svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0zM10 7v6m0 0l3-3m-3 3L7 13"/>
            </svg>
          </div>
        </div>
      </div>
      
      <!-- Upload Date -->
      <div class="absolute bottom-4 left-4 right-4">
        <span class="bg-black/70 text-white px-3 py-2 rounded-lg text-sm font-medium backdrop-blur-sm">
          ðŸ“… {formatDate(photo.uploadDate)}
        </span>
      </div>
    </div>
  </div>
  
  <!-- Title -->
  <div class="p-4">
    <h3 class="text-lg font-semibold text-gray-900 line-clamp-2 group-hover:text-primary-600 transition-colors">
      {photo.title}
    </h3>
  </div>
</article>

